{
  "name": "jarvis-mcp",
  "version": "1.0.0",
  "description": "A JARVIS-inspired MCP (Model Context Protocol) server providing personal assistant capabilities including system monitoring, smart home control, task management, and more.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "jarvis-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jarvis",
    "ai",
    "assistant",
    "smart-home",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "vitest": "^4.0.15"
  }
}
